<!DOCTYPE html>
<html>
  <head>
    <title>Fotobook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
  </head>

  <body>
    <header>
      <div class="row">
        <div class="col-md-2">
          <p class="text-right font-text"><strong>Fotobook</strong></p>
        </div>
        <div class="col-md-4">
          <input class ="form-control" type="text" name="search" placeholder="Search Photo / Album">
        </div>
        <div class="col-md-4 text-right font-text">
          <% if current_user %>
            <strong><%= current_user.last_name %></strong>
          <% end %>
        </div>
        <div class="col-md-2 text-center font-text">
          <% if current_user %>
            <strong><%= link_to 'Logout', destroy_user_session_path, method: :delete %></strong>
          <% else %>
            <strong><%= link_to 'Login', new_user_session_path %></strong>
          <% end %>
        </div>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
